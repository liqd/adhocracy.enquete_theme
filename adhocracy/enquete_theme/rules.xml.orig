<rules
    xmlns="http://namespaces.plone.org/diazo"
    xmlns:css="http://namespaces.plone.org/diazo/css"
    xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

    <theme href="index.html" />

    <!--Theme adhocracy-->
    <rules css:if-content="#frame">
        <!-- Head: title -->                                               
        <replace theme="/html/head/title" content="/html/head/title" />    
        <!-- Head: base tag -->                                            
        <replace theme="/html/head/base" content="/html/head/base" />      
        <!-- Head: styles-->                                               
        <drop theme="/html/head/meta" if-content="/html/head/meta"/>     
        <append theme="/html/head" content="/html/head/meta" />
        <drop theme="/html/head/style | /html/head/link" if-content="/html/head/style"/>    
        <append theme="/html/head" content="/html/head/link | /html/head/style" />
        <drop theme="/html/head/script" if-content="/html/head/script"/>   
        <append theme="/html/head" content="/html/head/script" />

        <!--Header & Navigation-->
        <replace css:theme="#globalheader" css:content="#globalheader" />
        <replace css:theme="#breadcrumbs" css:content="#breadcrumbs" />

        <!--Footer -->
        <replace css:theme="#links" css:content="#links" />

        <!--Content body and sidebar-->
        <rules if-content="not(//*[@class='content-startpage'])">
            <replace css:theme="#content" css:content=".content" />
            <!--<drop css:theme-children="#content_header" />-->
            <!--<drop css:theme-children="#content_body" />-->
            <!--<append css:theme="#content_header" css:content=".top_actions" />-->
            <!--<append css:theme="#content_header" css:content=".page_title" />-->
            <!--<append css:theme="#content_body" css:content=".mainbar"  />-->
            <!--<append css:theme="#content_body" css:content-children=".content" if-content="not(//*[@class='mainbar'])" />-->
        </rules>
        <!--Merge wordpress startpage and sidebar-->
        <rules if-content="//*[@class='content-startpage']">
            <drop css:theme-children="#content_header" />
            <!--<replace css:theme-children="#mainbar-dummy" css:content-children=".entry-content" href="http://staging_bundestag_blog.liqd.net/startseite/"  /> -->
            <replace css:theme-children="#mainbar-dummy" css:content-children=".entry-content" href="/home/joka/test.html"  /> 
        <!--<replace css:theme-children="#sidebar" css:content-children="#primary" href="http://staging_bundestag_blog.liqd.net" />-->
        </rules>                         
    </rules>

    <!--Theme wordpress-->
    <rules if-path="/_pages" >
        <!--Content body-->
        <replace css:theme-children="#content_header h1" css:content-children="#content h1" />
        <replace css:theme-children="#mainbar-dummy" css:content-children=".entry-content" />
        <!--Sidebar-->
        <drop css:theme-children="#sidebar" />

    </rules>

     <!--Dont theme wordpress admin-->
    <notheme if-path="/_pages/wp-admin" />

</rules>
